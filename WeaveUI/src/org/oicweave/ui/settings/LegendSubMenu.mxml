<mx:VBox xmlns="org.oicweave.ui.settings.*" 
		 xmlns:mx="http://www.adobe.com/2006/mxml" 
		 width="100%" 
		 height="100%">
	
	<mx:HBox>
		<mx:Label text="Availability" 
				  width="75" 
				  toolTip="Turns the legend on or off"/>
		
		<mx:RadioButton groupName="available"
						buttonMode="true"
						id="availableon"
						label="On"
						width="50"/>
		
		<mx:RadioButton groupName="available"
						buttonMode="true"
						id="availableoff"
						label="Off"
						width="50"/>
	</mx:HBox>
	
	<mx:HBox>
		<mx:Label text="Moveability"
				  width="75" 
				  toolTip="Disable or enable movement of the legend"/>
		
		<mx:RadioButton groupName="movable"
						buttonMode="true"
						id="moveon"
						label="On"
						width="50"/>
		
		<mx:RadioButton groupName="movable"
						buttonMode="true"
						id="moveoff"
						label="Off"
						width="50"/>
	</mx:HBox>
</mx:VBox>
