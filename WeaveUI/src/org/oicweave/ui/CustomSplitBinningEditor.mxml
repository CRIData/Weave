	<mx:HBox id="valuesModule">
		<mx:VBox verticalGap="0">
			<mx:Label text="min:"/>
			<mx:TextInput id="splitMin" width="60" editable="true"/>
		</mx:VBox>
		
		<mx:VBox verticalGap="0">
			<mx:Label text="split values (comma separated):" width="190"/>
