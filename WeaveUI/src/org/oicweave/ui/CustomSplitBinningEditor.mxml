			<!--<TextInputWithRegex id="binRange" width="190" restrict="0-9 ,.\-" borderThickness="4"/>-->
			<mx:TextInput id="binRange" width="190" borderThickness="4"/>
		</mx:VBox>
		
		<mx:VBox verticalGap="0">
			<mx:Label text="max:"/>
			<mx:TextInput id="splitMax" width="60" editable="true"/>
