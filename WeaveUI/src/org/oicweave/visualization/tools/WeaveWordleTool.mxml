<SimpleVisTool xmlns="org.oicweave.visualization.tools.*" 
			   xmlns:mx="http://www.adobe.com/2006/mxml"
			   xmlns:ui="org.oicweave.ui.*" 
			   layout="absolute">
	<mx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import org.oicweave.core.SessionManager;
			import org.oicweave.api.core.ILinkableDynamicObject;
			import org.oicweave.api.getCallbackCollection;
			import org.oicweave.data.AttributeColumns.ColorColumn;
			import org.oicweave.data.AttributeColumns.DynamicColumn;
			import org.oicweave.data.AttributeColumns.FilteredColumn;
			import org.oicweave.data.AttributeColumns.StringLookup;
			import org.oicweave.ui.AttributeSelectorPanel;
			import org.oicweave.utils.BitmapText;
			import org.oicweave.utils.DebugUtils;
			import org.oicweave.visualization.plotters.WeaveWordlePlotter;
			
			private var plotter:WeaveWordlePlotter = null;
			override protected function constructor():void
			{
				super.constructor();
				// lock dynamic objects into place
				plotter = initDefaultPlotter(WeaveWordlePlotter) as WeaveWordlePlotter;
				
				visualization.marginBottom.value = 80;
				visualization.marginTop.value    = 80;
				visualization.marginLeft.value   = 80;
				visualization.marginRight.value  = 80;
				visualization.enableZoomAndPan.value = false;
				
				visualization.bottomMarginClickCallbacks.addImmediateCallback(this, AttributeSelectorPanel.openDefaultSelector, [dataColumn]);
				
				getCallbackCollection(plotter).addGroupedCallback(this, updateTitle);
				toolTitle.addGroupedCallback(this, updateTitle);
			}
			
			private function updateTitle():void
			{
				if (toolTitle.value == null)
					title = "Wordle visualization";
			}
			
			override public function dispose():void
			{				
				super.dispose();
			}
			
			private function get dataColumn():DynamicColumn
			{
				return plotter.dynamColumn;
			}
			
			public function get dynamicColumn():DynamicColumn
			{
				return plotter.dynamColumn;
			}
		]]>
	</mx:Script>
	
	<ui:ControlPanel>
			<mx:Panel id="VizControlsPanel" 
					  label="Visualization Controls" 
					  headerHeight="2"
					  borderColor="0x000000" 
					  backgroundColor="0xCCCCCC" 
					  backgroundAlpha="0.0" 
					  borderThickness="0.0" 
					  height="100%" 
					  width="100%" 
					  borderAlpha="0.2" 
					  borderStyle="none">
			</mx:Panel>
	</ui:ControlPanel>
</SimpleVisTool>
