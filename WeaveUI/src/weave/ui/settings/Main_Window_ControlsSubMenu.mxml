<mx:VBox xmlns="weave.ui.settings.*" 
		 xmlns:mx="http://www.adobe.com/2006/mxml" 
		 width="100%" 
		 height="100%">
	<mx:HBox>
		<mx:Label text="Maximize" 
				  width="75" 
				  toolTip="Disable or enable maximizing windows"/>
		
		<mx:RadioButton groupName="windowMaximize"
						buttonMode="true"
						id="maxon"
						label="On"
						width="50"/>
		
		<mx:RadioButton groupName="windowMaximize"
						buttonMode="true"
						id="maxoff"
						label="Off"
						width="50"/>
	</mx:HBox>
	
	<mx:HBox>
		<mx:Label text="Minimize"
				  width="75" 
				  toolTip="Disable or enable minimizing windows"/>
		
		<mx:RadioButton groupName="windowMinimize"
						buttonMode="true"
						id="minon"
						label="On"
						width="50"/>
		
		<mx:RadioButton groupName="windowMinimize"
						buttonMode="true"
						id="minoff"
						label="Off"
						width="50"/>
	</mx:HBox>
	
	<mx:HBox>
		<mx:Label text="Close" 
				  width="75" 
				  toolTip="Disable or enable closing windows"/>
		
		<mx:RadioButton groupName="windowClose"
						buttonMode="true"
						id="closeon"
						label="On"
						width="50"/>
		
		<mx:RadioButton groupName="windowClose"
						buttonMode="true"
						id="closeoff"
						label="Off"
						width="50"/>
	</mx:HBox>
	
</mx:VBox>
