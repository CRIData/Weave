<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" label="Grid Line Settings"
		 creationPolicy="all" width="100%" borderStyle="solid" cornerRadius="5">
	

	<mx:Script>
		<![CDATA[
			import weave.api.linkBindableProperty;
			import weave.visualization.plotters.GridLinePlotter;
			import weave.visualization.tools.SimpleVisTool;
			
			private var _tool:SimpleVisTool = null;
			private var _plotter:GridLinePlotter= null;

			[Inspectable]
			public function set plotter(value:GridLinePlotter):void
			{
				_plotter = value;
			}
			
			[Inspectable]
			public function set tool(value:SimpleVisTool):void
			{
				_tool = value;
			}
			override protected function childrenCreated():void
			{
				super.childrenCreated();
			}
			
			private function alphaSliderFormatFunction(value:Number):String {
				//return int(100 - (value * 100)) + "% Transparent";
				return int((value * 100)) + "% Opaque" + "\n" + int(100 - (value * 100)) + "% Transparent";
			}
			
		]]>
	</mx:Script>
	<mx:Label fontWeight="bold" text="Grid Line Settings"/>
	<mx:VBox width="100%">
		<mx:CheckBox id="horizontalCheckBox"
					 label="Horizontal lines"
					 creationComplete="linkBindableProperty(_plotter.horizontal, horizontalCheckBox, 'selected')"/>
		<mx:VBox>				
			<mx:HBox>
				<mx:Label fontWeight="bold" text="Start"/>
				<mx:TextInput id="startInput"
							  creationComplete="linkBindableProperty(_plotter.start, startInput, 'text')"/>
			</mx:HBox>
			<mx:HBox>
				<mx:Label fontWeight="bold" text="End"/>
				<mx:TextInput id="endInput"
							  creationComplete="linkBindableProperty(_plotter.end, endInput, 'text')"/>
			</mx:HBox>
			<mx:HBox>
				<mx:Label fontWeight="bold" text="Interval"/>
				<mx:TextInput id="intervalInput"
							  creationComplete="linkBindableProperty(_plotter.interval, intervalInput, 'text')"/>
			</mx:HBox>
		</mx:VBox>
		<mx:HBox>
			<mx:HBox width="15%">
				<mx:Label text="Color:" fontWeight="bold" />
				<mx:ColorPicker toolTip="Select a color for the grid lines of this visualization" id="gridColorPicker" 
								creationComplete="linkBindableProperty(_plotter.lineStyle.color.defaultValue, gridColorPicker, 'selectedColor')"/>
			</mx:HBox>
			
			<mx:HBox width="25%">
				<mx:Label text="Thickness:" fontWeight="bold" />
				<mx:NumericStepper id="gridLineThicknessStepper" minimum="1" maximum="10"
								   creationComplete="linkBindableProperty(_plotter.lineStyle.weight.defaultValue, gridLineThicknessStepper, 'value')"/>
			</mx:HBox>
		</mx:HBox>
		
		<mx:HBox width="60%">
			<mx:Label text="Opacity:" fontWeight="bold" />
			<mx:HSlider id="gridLineAlphaSlider" 
						width="100%" 
						snapInterval="0.1"
						tickInterval="0.5" labels="{['0%','50%','100%']}" 
						dataTipFormatFunction="alphaSliderFormatFunction"
						minimum="0.0" maximum="1.0" 
						liveDragging="true"
						creationComplete="linkBindableProperty(_plotter.lineStyle.alpha.defaultValue, gridLineAlphaSlider, 'value')"/>
		</mx:HBox>
	
	</mx:VBox>
</mx:VBox>