<!-- 
To use this build script in Eclipse, first set the value of WEAVE_WEBAPPS to your tomcat/webapps
directory. Then go to the Project Properties for WeaveServices, then Builders and add this as a builder.

Make sure you set the Target for "After AutoBuild" to be the "dist" target. 

Whenever you build WeaveServices, this will automatically export the WAR file.

-->

<project name="WeaveServices" default="dist">
	<property name="WEAVE_WEBAPPS" value="<tomcat>/webapps"/>	
    <target name="dist">
    	<echo message="Deploying WeaveServices..."/>	
        <mkdir dir="build/jar"/>
        <war destfile="${WEAVE_WEBAPPS}/WeaveServices.war" webxml="WebContent/WEB-INF/web.xml">
            <lib dir="lib/"/>
            <classes dir="build/classes"/>
            <webinf dir="WebContent/WEB-INF"/>
            <metainf dir="WebContent/META-INF"/>
        </war>
    </target>
</project>
